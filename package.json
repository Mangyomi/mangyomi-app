{
  "name": "mangyomi",
  "version": "1.2.0",
  "description": "A Tachiyomi-style manga reader desktop application",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron:dev": "vite",
    "electron:build": "vite build && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "manga",
    "reader",
    "electron",
    "react"
  ],
  "author": "",
  "license": "Apache-2.0",
  "dependencies": {
    "adm-zip": "^0.5.16",
    "bufferutil": "^4.1.0",
    "discord-rpc": "^4.0.1",
    "jsdom": "^25.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.1.1",
    "sql.js": "^1.13.0",
    "utf-8-validate": "^5.0.10",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.2",
    "@types/adm-zip": "^0.5.7",
    "@types/discord-rpc": "^4.0.10",
    "@types/node": "^22.10.3",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "@types/sql.js": "^1.4.9",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "electron": "^39.2.7",
    "electron-builder": "^25.1.8",
    "typescript": "^5.7.2",
    "vite": "^6.0.6",
    "vite-plugin-electron": "^0.28.8",
    "vite-plugin-electron-renderer": "^0.14.6"
  },
  "build": {
    "appId": "com.mangyomi.app",
    "productName": "Mangyomi",
    "buildDependenciesFromSource": false,
    "nodeGypRebuild": false,
    "npmRebuild": false,
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "extensions/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Mangyomi",
      "perMachine": false,
      "runAfterFinish": true
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
